@model ProductUpdateVM

<div>
    <h2>
        Update Product
    </h2>
    <form method="post" enctype="multipart/form-data">
        <div asp-validation-summary="All" class="alert alert-danger"></div>
        <div>
            <label asp-for="Photo"></label>
            <input asp-for="Photo" class="form-control" />
            <div>
                <span asp-validation-for="Photo">
                </span>
            </div>
        </div>
        <div>
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <div>
                <span asp-validation-for="Name">
                </span>
            </div>
        </div>
        <div>
            <label asp-for="Offer"></label>
            <input asp-for="Offer" class="form-control" />
            <div>
                <span asp-validation-for="Offer">
                </span>
            </div>
        </div>
        <div>
            <label asp-for="NewPrice"></label>
            <input asp-for="NewPrice" class="form-control" />
            <div>
                <span asp-validation-for="NewPrice">
                </span>
            </div>
        </div>
        <div>
            <label asp-for="OldPrice"></label>
            <input asp-for="OldPrice" class="form-control" />
            <div>
                <span asp-validation-for="OldPrice">
                </span>
            </div>
        </div>
        <div>
            <label asp-for="Description"></label>
            <textarea asp-for="Description" rows="5" cols="60" class="form-control"></textarea>
            <div>
                <span asp-validation-for="Description">
                </span>
            </div>
        </div>
        <div>
            <label asp-for="SKU"></label>
            <input asp-for="SKU" class="form-control" />
            <div>
                <span asp-validation-for="SKU">
                </span>
            </div>
        </div>
        <div>
            <label asp-for="@Model.CategoryIds"></label>
            <select asp-for="@Model.CategoryIds" class="form-select">
                @foreach(var category in Model.Categories)
                {
                    <option value="@category.Id">@category.Title</option>
                }
            </select>
            <div>
                <span asp-validation-for="@Model.CategoryIds">
                </span>
            </div>
        </div>
        <div>
            <label asp-for="InformationIds"></label>
            <select asp-for="InformationIds" class="form-select">
                @foreach (var information in Model.Informations)
                {
                    <option value="@information.Id">@information.Key</option>
                }
            </select>
            <div>
                <span asp-validation-for="InformationIds">
                </span>
            </div>
        </div>
        <div class="mt-2">
            <button type="submit" class="btn btn-outline-success">
                Create
            </button>
        </div>
    </form>
</div>



